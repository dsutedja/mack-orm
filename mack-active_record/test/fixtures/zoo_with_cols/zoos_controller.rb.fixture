class ZoosController < Mack::Controller::Base

  # GET /zoos
  def index
    @zoos = Zoo.find(:all)
  end

  # GET /zoos/1
  def show
    @zoo = Zoo.find(params(:id))
  end

  # GET /zoos/new
  def new
    @zoo = Zoo.new
  end

  # GET /zoos/1/edit
  def edit
    @zoo = Zoo.find(params(:id))
  end

  # POST /zoos
  def create
    @zoo = Zoo.new(params(:zoo))
    if @zoo.save
      redirect_to(zoos_show_url(:id => @zoo.id))
    else
      render(:action => "new")
    end
  end

  # PUT /zoos/1
  def update
    @zoo = Zoo.find(params(:id))
    if @zoo.update_attributes(params(:zoo))
      redirect_to(zoos_show_url(:id => @zoo.id))
    else
      render(:action => "edit")
    end
  end

  # DELETE /zoos/1
  def delete
    @zoo = Zoo.find(params(:id))
    @zoo.destroy
    redirect_to(zoos_index_url)
  end

end
